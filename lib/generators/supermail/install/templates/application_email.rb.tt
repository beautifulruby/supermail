class ApplicationEmail < Supermail::Rails::Base
  def from = "website@example.com"

  def body
     <<~_
     #{yield if block_given?}

     Best,

     The Example.com Team
     _
  end

  def html_body
    <<~HTML
      #{yield if block_given?}
      <p>Best,</p>
      <p>The Example.com Team</p>
    HTML
  end
end
